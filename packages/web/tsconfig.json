{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ES2017"],
    "allowJs": true,
    "jsx": "preserve",
    "removeComments": false,
    "noEmit": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@pages/*": ["./src/pages/*"],
      "@themes/*": ["./src/themes/*"]
    },
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", ".next", "out"],
  "include": ["next-env.d.ts", "src", "test"]
}
